<%- include ("../partials/header") %>

<div class="row justify-content-md-center">
	<div class="col-md-10 mt-3">
		<div class="row">
			<div class="col-md-4">
				<div class="row">
					<div class="card border-0 mb-3 col-md-12">
						<img class="img-fluid rounded-circle mx-auto d-block card-img-top" 
								 style="width: 180px;  height: 180px;  object-fit: cover;" src="<%= user.avatar %>">
						<div class="card-body text-dark text-center">	
							<h3><%= user.username %></h3>
						</div>
					</div>
				</div>
				<div class="row">
					<div class="card border-0 mb-3 col-md-12">
						<div class="card-header">Website</div>
						<div class="card-body text-dark">	
							<a href="#">mywebsite.com</a>
						</div>
					</div>
				</div>	
				<div class="row">
					<div class="card border-0 mb-3 col-md-12">
						<div class="card-header">Activity</div>
						<div class="card-body text-dark">	
							<p><strong>Campgrounds</strong><span class="float-right"><%= campgrounds.length %></span></p>
							<p><strong>Comments</strong><span class="float-right"><%= comments.length %></span></p>
							<p><strong>Likes</strong><span class="float-right"><%= user.likedCampgrounds.length %></span></p>
						</div>
					</div>
				</div>	
			</div>
			<div class="col-md-8">
				<div class="card border-dark mb-3">
					<div class="card-header"><h4 class="ml-2">General Information</h4></div>
					<div class="card-body text-dark">
						<div class="row">
							<div class="col-md-12">
								<p><strong>Real Name</strong><span class="float-right"><%= user.firstName + " " + user.lastName %></span></p>
								<p><strong>Birthday</strong><span class="float-right"><%= user.birthday %></span></p>
								<p><strong>Gender</strong><span class="float-right"><%= user.gender %></span></p>
								<p><strong>Country</strong><span class="float-right"><%= user.country %></span></p>
								<p><strong>Phone</strong><span class="float-right"><%= user.phoneNumber %></span></p>
								<p><strong>Email</strong><span class="float-right"><%= user.email %></span></p>
							</div>
						</div>
					</div>
				</div>
				<div class="card border-dark mb-3">
					<div class="card-header"><h4 class="ml-2">Additional Information</h4></div>
					<div class="card-body text-dark">
						<div class="row">
							<div class="col-md-12">
								<% if (comments.length > 0) { %>
									<p><strong>Recent Comment</strong><span class="float-right"><%= comments[comments.length-1].text %></span></p>
								<% } %>
								<p><strong>Favorite Camping Area</strong><span class="float-right"><%= user.favoritePlace %></span></p>
								<p><strong>Member Since</strong><span class="float-right"><%= moment(user.createdAt).format('LL') %></span></p>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		
	</div>
</div>

<%- include ("../partials/footer") %>