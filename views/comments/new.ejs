<%- include ("../partials/header") %>

	<div class="row justify-content-center">
		<div class="col-md-12">
			<h1>Add new comment to <%= campground.name %></h1>
		</div>
		<div class="div-form col-md-12">
			<form action="/campgrounds/<%= campground._id %>/comments" method="POST" class="myforms">
				<div class="form-group">
					<input class="form-control" type="text" name="comment[text]" placeholder="text" required>
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-outline-dark btn-block">Submit!</button>
				</div>
			</form>
			<div class="myforms mb-3">
				<a href="/campgrounds/<%= campground._id %>">Go Back</a>
			</div>
		</div>	
	</div>

<%- include ("../partials/footer") %>