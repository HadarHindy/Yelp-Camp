<%- include ("../partials/header") %>

	<div class="row justify-content-center">
		<div class="col-md-12">
			<h1>Create a New Campground</h1>
		</div>
		<div class="div-form col-md-12">
			<form action="/campgrounds" method="POST" enctype="multipart/form-data" class="myforms">
				<div class="form-group">
					<label for="new-name">Campground's Name</label>
					<input id="new-name" class="form-control" type="text" name="campground[name]" placeholder="Name" required>
				</div>
				<div class="form-group">
					<label for="new-price">Price Per Night</label>
					<input id="new-price" class="form-control" type="number" name="campground[price]" min="0.01" step="0.01" placeholder="Price" required>
				</div>
				<div class="form-group">
					<label for="new-location">Location</label>
					<input id="new-location" class="form-control" type="text" name="campground[address]" placeholder="Location" required>
				</div>	
				<div class="form-group">
					<label for="new-image">Image</label>
					<input id="new-image" class="form-control-file" type="file" name="image" accept="image/*" required>
				</div>
				<div class="form-group">
					<label for="new-description">Description</label>
					<textarea id="new-description" class="form-control" name="campground[description]" placeholder="Description Of Campground..." rows="12"></textarea>
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-outline-dark btn-block">Submit</button>
				</div>
			</form>
			<div class="myforms mb-3">
				<a href="/campgrounds">Go Back</a>
			</div>
		</div>	
	</div>

<%- include ("../partials/footer") %>