<%- include ("../partials/header") %>

	<div class="row justify-content-center">
		<div class="col-md-12">
			<h1>Edit <%= campground.name%></h1>
		</div>
	</div>
	<div class="div-form col-md-12">
		<form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST" enctype="multipart/form-data" class="myforms">
			<div class="form-group">
				<label for="edit-name">Full Name</label>
				<input id="edit-name" class="form-control" type="text" name="campground[name]" value="<%= campground.name %>">
			</div>
			<div class="form-group">
				<label for="edit-price">Price Per Night</label>
				<input id="edit-price" class="form-control" type="number" name="campground[price]" 
					   value="<%= campground.price %>" min="0.01" step="0.01">
			</div>
			<div class="form-group">
				<label for="edit-location">Location</label>
				<input id="edit-location" class="form-control" type="text" name="campground[address]" value="<%= campground.address %>">
			</div>
			<div class="form-group">
					<label for="edit-image">Image</label>
					<input id="edit-image" class="form-control-file" type="file" name="image" accept="image/*">
				</div>
			<div class="form-group">
				<label for="edit-description">Description</label>
				<textarea id="edit-description" class="form-control" name="campground[description]" rows="12"><%= campground.description %></textarea>
			</div>
			<div class="form-group">
				<button class="btn btn-lg btn-block btn-outline-dark">Update</button>
			</div>
		</form>
		<div class="myforms mb-3">
				<a href="/campgrounds">Go Back</a>
			</div>
	</div>

<%- include ("../partials/footer") %>